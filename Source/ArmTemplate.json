{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "AutomationAccountName":{
      "type": "string",
      "defaultValue":"AzureSqlBulkFailover",
      "metadata": {
        "description": "The name of the automation account must be unique for the subscription. You must delete the existing account to redeploy with the same name."
      }
    },
    "branchName": {
      "type": "string",
      "defaultValue": "main",
      "metadata": {
        "description": "The name of the branch to pull the bulk failover scripts from, for official release leave as main, for debugging changes enter the name of the branch where your modified scripts are located (must be in the same AzureSqlBulkFailover GitHub repository)."
      }
    }
  },
  "resources": [    
    {
      "name": "[parameters('AutomationAccountName')]",
      "type": "Microsoft.Automation/automationAccounts",
      "apiVersion": "2022-08-08",
      "location": "[resourceGroup().location]",
      "identity": {
        "type": "SystemAssigned"
        },
      "properties": {
          "comment": "Resource defined structure",
          "disableLocalAuth": false,
          "sku": {
            "name": "Basic"
          },
          "encryption": {
            "keySource": "Microsoft.Automation",
            "identity": {}
          }
      },
      "resources": [
        {
          "type": "Microsoft.Automation/automationAccounts/runbooks",
          "apiVersion": "2022-08-08",
          "name": "[concat(parameters('AutomationAccountName'),'/AzureSqlBulkFailoverRunbook')]",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[concat('Microsoft.Automation/automationAccounts/', parameters('AutomationAccountName'))]"
          ],
          "properties": {
            "description": "Downloads scripts from GitHub (AzureSqlBulkFailover) from the selected branch and executes them causing bulk failover of all databases in the selected serveer.",
            "runbookType": "PowerShell7",
            "logProgress": "true",
            "logVerbose": "true",
            "logActivityTrace": 0,
            "publishContentLink": {
              "uri": "[concat('https://raw.githubusercontent.com/Azure/AzureSqlBulkFailover/',parameters('branchName'),'/Source/RunbookEntrypoint.ps1')]"
            }
          }
        }
      ]
    },
    {
      "type": "Microsoft.Automation/automationAccounts/variables",
      "apiVersion": "2023-11-01",
      "name": "[concat(parameters('AutomationAccountName'), '/LogLevel')]",
      "dependsOn": [
          "[resourceId('Microsoft.Automation/automationAccounts/', parameters('AutomationAccountName'))]"
      ],
      "properties": {
          "isEncrypted": false,
          "value": "\"Minimal\"",
          "description": "Defines the level of logging detail for bulk failover runbook execution"
      }
    },
    {
      "type": "Microsoft.Automation/automationAccounts/variables",
      "apiVersion": "2023-11-01",
      "name": "[concat(parameters('AutomationAccountName'), '/CheckPlannedMaintenanceNotification')]",
      "dependsOn": [
          "[resourceId('Microsoft.Automation/automationAccounts/', parameters('AutomationAccountName'))]"
      ],
      "properties": {
          "isEncrypted": false,
          "value": "true",
          "description": "Determines whether or not to check for planned maintenance notifications before executing the bulk failover runbook"
      }
    },
    {
        "type": "Microsoft.Automation/automationAccounts/runtimeEnvironments",
        "apiVersion": "2023-05-15-preview",
        "name": "[concat(parameters('AutomationAccountName'), '/AzureSqlBulkFailoverEnv')]",
        "location": "[resourceGroup().location]",
        "dependsOn": [
            "[resourceId('Microsoft.Automation/automationAccounts', parameters('AutomationAccountName'))]"
        ],
        "properties": {
            "runtime": {
                "language": "PowerShell",
                "version": "7.2"
            },
            "defaultPackages": {
                "az": "11.2.0",
                "azure cli": "2.56.0"
            },
            "description": "Environment For Running AzureSqlBulkFailover runbook"
        }
    },
    {
        "type": "Microsoft.Automation/automationAccounts/runtimeEnvironments/packages",
        "apiVersion": "2023-05-15-preview",
        "name": "[concat(parameters('AutomationAccountName'), '/AzureSqlBulkFailoverEnv/Az.Accounts')]",
        "location": "[resourceGroup().location]",
        "dependsOn": [
            "[resourceId('Microsoft.Automation/automationAccounts/runtimeEnvironments', parameters('AutomationAccountName'), 'AzureSqlBulkFailoverEnv')]",
            "[resourceId('Microsoft.Automation/automationAccounts', parameters('AutomationAccountName'))]"
        ],
        "properties": {
            "contentLink": {
              "version": "4.0.0",
              "uri": "https://www.powershellgallery.com/api/v2/package/Az.Accounts/4.0.0"
            }
        }
    },
    {
        "type": "Microsoft.Automation/automationAccounts/runtimeEnvironments/packages",
        "apiVersion": "2023-05-15-preview",
        "name": "[concat(parameters('AutomationAccountName'), '/AzureSqlBulkFailoverEnv/Az.ResourceGraph')]",
        "location": "[resourceGroup().location]",
        "dependsOn": [
            "[resourceId('Microsoft.Automation/automationAccounts/runtimeEnvironments', parameters('AutomationAccountName'), 'AzureSqlBulkFailoverEnv')]",
            "[resourceId('Microsoft.Automation/automationAccounts', parameters('AutomationAccountName'))]"
        ],
        "properties": {
            "contentLink": {
              "version": "2.0.0",
              "uri": "https://www.powershellgallery.com/api/v2/package/Az.ResourceGraph/2.0.0"
            }
        }
    }
  ],
"outputs": {}
}
