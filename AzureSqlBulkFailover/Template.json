{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0",
  "parameters": {
  },
  "variables": {},
  "resources": [
    {
        "type": "Microsoft.Resources/deploymentScripts",
        "apiVersion": "2020-10-01",
        "name": "DeleteRunbookBeforeDeployment",
        "location": "[resourceGroup().location]",
        "kind": "AzurePowerShell",
        "identity": {
            "type": "UserAssigned",
            "userAssignedIdentities": {
                "[parameters('identity')]": {}
            }
        },
        "properties": {
            "azPowerShellVersion": "7.0",
            "scriptContent": "[concat('Remove-AzAutomationRunbook -ResourceGroupName ', resourceGroup().location, ' -AutomationAccountName AzureSqlBulkFailover -Name AzureSqlBulkFailoverRunbook')]",
            "timeout": "PT5M",
            "cleanupPreference": "OnSuccess",
            "retentionInterval": "P1D"
        }
    }, 
    {
      "name": "AzureSqlBulkFailover",
      "type": "Microsoft.Automation/automationAccounts",
      "apiVersion": "2015-10-31",
      "location": "[resourceGroup().location]",
      "dependsOn": [
            "DeleteRunbookBeforeDeployment"
          ],
      "tags": {},
      "properties": {
        "comment": "Resource defined structure",
        "sku": {
          "name": "Free"
        }
      },
      "resources": [
        {
          "type": "runbooks",
          "apiVersion": "2020-01-13-preview",
          "name": "AzureSqlBulkFailoverRunbook",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "AzureSqlBulkFailover"
          ],
          "properties": {
            "runbookType": "PowerShell",
            "logProgress": "false",
            "logVerbose": "false",
            "description": "Triggers failover for many databases",
            "publishContentLink": {
              "uri": "https://raw.githubusercontent.com/Azure/AzureSqlBulkFailover/main/AzureSqlBulkFailover/AzureSqlBulkFailover.ps1",
              "version": "1.0.0.0"
            }
          }
        }
      ]
    }
  ],
  "outputs": {}
}
